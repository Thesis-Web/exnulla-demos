{
  "name": "exnulla-demos",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!**/node_modules/**\" \"!**/dist/**\" \"!docs/blueprints/**\" \"!docs/engineering-specs/**\"",
    "lint": "pnpm format:check && pnpm lint:md",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "build": "turbo run build",
    "ci:gate": "pnpm lint && pnpm typecheck && pnpm test && pnpm build"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.21.0",
    "prettier": "3.8.1",
    "turbo": "2.8.10",
    "typescript": "5.9.3"
  }
}
